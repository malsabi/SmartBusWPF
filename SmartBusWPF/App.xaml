<Application x:Class="SmartBusWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SmartBusWPF">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/CustomGridStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/TextBlockStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/WatermarkTextBoxStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/ButtonStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/CheckBoxStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/ListViewStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/ContextMenuStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>  