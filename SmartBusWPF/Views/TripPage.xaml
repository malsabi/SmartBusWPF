<Page x:Class="SmartBusWPF.Views.TripPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartBusWPF.Views"
      xmlns:controls="clr-namespace:SmartBusWPF.Styles.Controls" 
      xmlns:tooltip="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="950"
      Title="TripPage"
      ShowsNavigationUI="False">

    <controls:CustomGrid>

        <!--Logo Image-->
        <Image Grid.Row="0"
               Grid.Column="0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               MaxWidth="250"
               MaxHeight="250"
               Margin="20, 25, 0, 0"
               Source="/Assets/Images/Logo.png"/>

        <!--Welcome User & Profile Button-->
        <StackPanel Grid.Row="0"
                    Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0, 25, 20, 0">

            <TextBlock Text="Welcome Mohammed"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Margin="0, 0, 0, 0"
                       Padding="0, 0, 5, 0"
                       Style="{DynamicResource WelcomeTextBlock}"/>

            <controls:CustomButton Width="50"
                                   Height="50"
                                   CornerRadius="40"
                                   Image="/Assets/Images/User.png"
                                   ContextMenuService.ShowOnDisabled="True"
                                   ContextMenuService.Placement="Left"                     
                                   ContextMenuService.HorizontalOffset="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth}" 
                                   ContextMenuService.VerticalOffset="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}">>
                <controls:CustomButton.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Home" Command="{Binding OpenHomeCommand}"/>
                        <MenuItem Header="Profile" Command="{Binding OpenProfileCommand}"/>
                        <MenuItem Header="Logout" Command="{Binding LogoutCommand}"/>
                    </ContextMenu>
                </controls:CustomButton.ContextMenu>
            </controls:CustomButton>
        </StackPanel>

        <!--Total Students & Student Information-->
        <DockPanel Grid.RowSpan="2"
                   Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Margin="0, 110, 0, 0">

            <StackPanel DockPanel.Dock="Left"
                        Orientation="Vertical"
                        MinWidth="300"
                        MaxWidth="300"
                        Background="{DynamicResource SecondaryColor}">

                <TextBlock HorizontalAlignment="Left"
                       Margin="10, 10, 0, 0"
                       Style="{DynamicResource TotalStudentsTextBlock}">
                    <TextBlock.Text>
                        <Binding Path="TotalStudents" StringFormat="Total Students: {0}">
                        </Binding>
                    </TextBlock.Text>
                </TextBlock>

                <ItemsControl ItemsSource="{Binding Students}"
                          Margin="10, 20, 0, 0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" MaxWidth="300"  />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="White"
                                BorderThickness="1"
                                Width="42"
                                Height="42"
                                CornerRadius="21"
                                Margin="0, 0, 13, 13">
                                <Image Source="{Binding Image}"
                                   Width="21"
                                   Height="21">
                                    <tooltip:ToolTipService.ToolTip>
                                        <TextBlock Text="{Binding Name}"/>
                                    </tooltip:ToolTipService.ToolTip>
                                </Image>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <DockPanel DockPanel.Dock="Left"
                       Margin="10, 0, 0, 0"
                       Background="{DynamicResource SecondaryColor}">

                <TextBlock DockPanel.Dock="Top"
                           Text="Student Information"
                           HorizontalAlignment="Left"
                           Margin="10, 10, 0, 0"
                           Style="{DynamicResource TotalStudentsTextBlock}"/>

                <DockPanel DockPanel.Dock="Top">
                    
                    <Border DockPanel.Dock="Left"
                            Background="#D9DBF0"
                            Width="250"
                            Height="250"
                            Margin="10, 30, 10, 0"
                            HorizontalAlignment="Left"
                            CornerRadius="125">
                        <Image Source="/Assets/Images/Image_Placeholder.png"
                                Width="150"
                                Height="150"/>
                    </Border>

                    <StackPanel DockPanel.Dock="Right"
                                Orientation="Vertical"
                                Margin="0, 0, 10, 0"
                                VerticalAlignment="Center"
                                Background="white">

                        <StackPanel Orientation="Horizontal"
                                    Margin="30, 30, 20, 0">

                            <Image Source="/Assets/Images/UserInfo.png"
                                    Width="34"
                                    Height="34"/>
                            <TextBlock Text="{Binding FullName}"
                                        VerticalAlignment="Center"
                                        Margin="10, 0, 0, 0"
                                        Style="{DynamicResource StudentInfoTextBlock}"/>

                        </StackPanel>

                        <Border BorderBrush="{DynamicResource SplitBorderColor}"
                                BorderThickness="2"
                                Height="1"
                                Margin="30, 10, 20, 0"/>

                        <StackPanel Orientation="Horizontal"
                                    Margin="30, 30, 20, 0">

                            <Image Source="/Assets/Images/UserAddress.png"
                                    Width="34"
                                    Height="34"/>
                            <TextBlock Text="{Binding Address}"
                                        VerticalAlignment="Center"
                                        Margin="10, 0, 0, 0"
                                        Style="{DynamicResource StudentInfoTextBlock}"/>

                        </StackPanel>

                        <Border BorderBrush="{DynamicResource SplitBorderColor}"
                                BorderThickness="2"
                                Height="1"
                                Margin="30, 10, 20, 0"/>

                        <StackPanel Orientation="Horizontal"
                                    Margin="30, 30, 20, 30">

                            <Image Source="/Assets/Images/UserSchool.png"
                                   Width="34"
                                   Height="34"/>
                            <TextBlock Text="{Binding GradeLevel}"
                                       VerticalAlignment="Center"
                                       Margin="10, 0, 0, 0"
                                       Style="{DynamicResource StudentInfoTextBlock}"/>
                        </StackPanel>
                    </StackPanel>
                </DockPanel>

                <Border DockPanel.Dock="Top"
                        Background="White"
                        Margin="10, 20, 10, 0"
                        Height="50">

                    <TextBlock Text="{Binding Status}"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center"
                               Margin="10, 0, 0, 0"
                               Style="{DynamicResource StatusTextBlock}"/>
                </Border>

                <controls:CustomButton DockPanel.Dock="Bottom"
                                       Content="START"
                                       Width="150"
                                       Height="50"
                                       CornerRadius="15"
                                       Margin="0, 0, 10, 20"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       Command="{Binding StartTripCommand}"/>
            </DockPanel>
        </DockPanel>

        <!--Version-->
        <StackPanel Grid.Row="2"
                    Grid.ColumnSpan="3"
                    Orientation="Vertical">

            <Border BorderBrush="{DynamicResource SplitBorderColor}"
                    BorderThickness="2"
                    Height="1" />
            
            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Version 1.0.0.0"
                           Margin="10, 10, 0, 0"
                           Style="{DynamicResource VersionTextBlock}"/>

                <Border BorderBrush="{DynamicResource SplitBorderColor}"
                        BorderThickness="2"
                        Margin="10, 10, 0, 0"
                        Width="1" />

                <controls:CustomButton Content="LOGS"
                                       Margin="10, 9, 0, 0"
                                       FontSize="16"
                                       CornerRadius="0"
                                       BorderThickness="0"
                                       BorderBrush="#404AAF"
                                       Foreground="{DynamicResource VersionColor}"
                                       Background="Transparent"
                                       HoverColor="#E0E0E0"
                                       ClickColor="#BBBBBB"
                                       Command="{Binding OpenLogsCommand}"/>

                <Border BorderBrush="{DynamicResource SplitBorderColor}"
                        BorderThickness="2"
                        Margin="10, 10, 0, 0"
                        Width="1" />

                <controls:CustomButton Content="NOTIFICATIONS"
                                       Margin="10, 9, 0, 0"
                                       FontSize="16"
                                       CornerRadius="0"
                                       BorderThickness="0"
                                       BorderBrush="#404AAF"
                                       Foreground="{DynamicResource VersionColor}"
                                       Background="Transparent"
                                       HoverColor="#E0E0E0"
                                       ClickColor="#BBBBBB"
                                       Command="{Binding OpenNotificationsCommand}"/>
            </StackPanel>
        </StackPanel>
    </controls:CustomGrid>
</Page>