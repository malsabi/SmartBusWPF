<UserControl x:Class="SmartBusWPF.Views.UserControls.FaceScanningControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartBusWPF.Views.UserControls"
             xmlns:controls="clr-namespace:SmartBusWPF.Styles.Controls" 
             xmlns:convertors="clr-namespace:SmartBusWPF.Styles.Convertors"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">

    <UserControl.Resources>
        <convertors:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <convertors:Base64ImageConverter x:Key="Base64ImageConverter"/>
    </UserControl.Resources>

    <Grid Margin="10, 0, 0, 0"
          Background="{DynamicResource SecondaryColor}"
          Visibility="{Binding ShowScanningPhase, Converter={StaticResource BoolToVisibilityConverter}}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="270"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Text="Student Information"
                   HorizontalAlignment="Left"
                   Margin="10, 10, 0, 0"
                   Style="{DynamicResource TotalStudentsTextBlock}"/>

        <Border Grid.Column="0"
                Grid.Row="1"
                Background="#D9DBF0"
                Width="250"
                Height="250"
                Margin="10, 0, 10, 0"
                HorizontalAlignment="Left"
                CornerRadius="125">

            <Image Source="{Binding StudentImage, Converter={StaticResource Base64ImageConverter}}"
                   Width="150"
                   Height="150"/>
        </Border>

        <StackPanel Grid.Column="1"
                    Grid.Row="1"
                    Orientation="Vertical"
                    Margin="10, 0, 10, 0"
                    VerticalAlignment="Center"
                    Background="white">

            <StackPanel Orientation="Horizontal"
                        Margin="30, 30, 20, 0">

                <Image Source="/Assets/Images/UserInfo.png"
                       Width="34"
                       Height="34"/>
                <TextBlock Text="{Binding FullName}"
                           VerticalAlignment="Center"
                           Margin="10, 0, 0, 0"
                           Style="{DynamicResource StudentInfoTextBlock}"/>
            </StackPanel>

            <Border BorderBrush="{DynamicResource SplitBorderColor}"
                    BorderThickness="2"
                    Height="1"
                    Margin="30, 10, 20, 0"/>

            <StackPanel Orientation="Horizontal"
                        Margin="30, 30, 20, 0">

                <Image Source="/Assets/Images/UserAddress.png"
                       Width="34"
                       Height="34"/>

                <TextBlock Text="{Binding Address}"
                           VerticalAlignment="Center"
                           Margin="10, 0, 0, 0"
                           Style="{DynamicResource StudentInfoTextBlock}"/>
            </StackPanel>

            <Border BorderBrush="{DynamicResource SplitBorderColor}"
                    BorderThickness="2"
                    Height="1"
                    Margin="30, 10, 20, 0"/>

            <StackPanel Orientation="Horizontal"
                        Margin="30, 30, 20, 30">

                <Image Source="/Assets/Images/UserSchool.png"
                       Width="34"
                       Height="34"/>
                <TextBlock Text="{Binding GradeLevel}"
                           VerticalAlignment="Center"
                           Margin="10, 0, 0, 0"
                           Style="{DynamicResource StudentInfoTextBlock}"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.ColumnSpan="3"
                Grid.Row="2"
                Background="White"
                Margin="10, 0, 10, 0">

            <TextBlock Text="{Binding Status}"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Center"
                       Margin="10, 0, 0, 0"
                       Style="{DynamicResource StatusTextBlock}"/>
        </Border>

        <controls:CustomButton Grid.Column="2"
                               Grid.Row="3"
                               Content="START"
                               Width="150"
                               Height="50"
                               CornerRadius="15"
                               Margin="0, 0, 10, 10"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Command="{Binding StartTripCommand}"/>

